@using Kendo.Mvc.UI
@model WallProject.Models.Goods

@{
    ViewBag.Title = "حذف";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="col-md-2"></div>
<div class="col-md-8">
    <br/>
    <h3>آیا از حذف این مورد مطمئن هستید؟</h3>
    <br/>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new {@class = "control-label"})
                    <br/>
                    @Html.ValueFor(model => model.Title)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "control-label"})
                    <br/>
                    @*@Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control"}})*@
                    @Html.ValueFor(model=>model.Description)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PictureName, htmlAttributes: new {@class = "control-label"})
                    <br/>
                    <img src="/IMG/@Model.PictureName" alt="بدون عکس" class="thumbnail" width="200"/>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateTime, htmlAttributes: new {@class = "control-label"})
                    <br/>
                    @Html.ValueFor(model => model.DateTime, "{0:dddd - yyyy MMMM dd}")
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Count, htmlAttributes: new {@class = "control-label"})
                    <br/>
                    @Html.ValueFor(model => model.Count)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CanSend, htmlAttributes: new {@class = "control-label"})
                    @Html.EditorFor(model => model.CanSend)
                </div>

                <div class="form-group">
                    <input type="submit" value="حذف" class="btn btn-danger"/>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    </div>
</div>
<div class="col-md-2"></div>
<script>
        $(function() {
            $("input[type=text],input[type=submit]").addClass("form-control");
        });
</script>